{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "rootDir": "src/",
        "outDir": "dist/"
    },
    "include": ["src/**/*.ts"]
}
